import React, { useState, useEffect } from "react";

// Com proxy reverso, API URL relativa ao mesmo host
const API_URL = "/api/nucgpt";

const NucGPTChat = () => {
  const [question, setQuestion] = useState("");
  const [history, setHistory] = useState([]);
  const [loading, setLoading] = useState(false);

  // Buscar hist처rico ao carregar o componente
  useEffect(() => {
    const fetchHistory = async () => {
      try {
        const response = await fetch(`${API_URL}/conversation_history/`);
        const data = await response.json();
        setHistory(data.conversation_history || []);
      } catch (error) {
        console.error("Erro ao buscar hist처rico:", error);
      }
    };
    fetchHistory();
  }, []);

  // Enviar nova mensagem
  const handleSubmit = async (e) => {
    e.preventDefault();
    if (!question.trim()) return;

    setLoading(true);

    try {
      const response = await fetch(`${API_URL}/send_message/`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ user_message: question }),
      });

      const data = await response.json();

      if (response.ok) {
        setHistory(data.history || []); // atualiza hist처rico
        setQuestion(""); // limpa input
      } else {
        console.error("Erro na API:", data);
      }
    } catch (error) {
      console.error("Erro de conex찾o:", error);
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className="chat-container">
      <h2>Converse com NucGPT</h2>

      <div className="chat-history">
        {history.map((msg, index) => (
          <p key={index}>{msg}</p>
        ))}
      </div>

      <form onSubmit={handleSubmit} className="chat-form">
        <input
          type="text"
          placeholder="Digite sua pergunta..."
          value={question}
          onChange={(e) => setQuestion(e.target.value)}
          className="chat-input"
          disabled={loading}
        />
        <button type="submit" className="chat-button" disabled={loading}>
          {loading ? "Enviando..." : "Perguntar"}
        </button>
      </form>
    </div>
  );
};

export default NucGPTChat;
